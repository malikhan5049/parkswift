<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <!--
        Added the entity ReservedParking.
    -->
    <changeSet id="20150610124825" author="jhipster">
        <createTable tableName="RESERVEDPARKING">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="description" type="varchar(255)"/>
            <column name="date_start" type="date">
                <constraints nullable="false" />
            </column>
            <column name="date_end" type="date">
                <constraints nullable="false" />
            </column>
            <column name="time_start" type="timestamp">
                <constraints nullable="false" />
            </column>
            <column name="time_end" type="timestamp">
                <constraints nullable="false" />
            </column>
            <column name="repeat_basis" type="varchar(255)"/>
            <column name="repeat_occurrences" type="integer"/>
            <column name="status" type="varchar(255)"/>
            <column name="reserved_on" type="timestamp"/>
            <column name="parent_id" type="integer"/>
            <column name="created_at" type="timestamp"/>
            <column name="modified_at" type="timestamp"/>
            <column name="parkingspace_id" type="bigint"/>
        </createTable>
        <dropDefaultValue tableName="RESERVEDPARKING" columnName="time_start" columnDataType="datetime"/>

        <dropDefaultValue tableName="RESERVEDPARKING" columnName="time_end" columnDataType="datetime"/>

        <dropDefaultValue tableName="RESERVEDPARKING" columnName="reserved_on" columnDataType="datetime"/>

        <dropDefaultValue tableName="RESERVEDPARKING" columnName="created_at" columnDataType="datetime"/>

        <dropDefaultValue tableName="RESERVEDPARKING" columnName="modified_at" columnDataType="datetime"/>

        
        <addForeignKeyConstraint baseColumnNames="parkingspace_id"
                                 baseTableName="RESERVEDPARKING"
                                 constraintName="fk_reservedparking_parkingspace_id"
                                 referencedColumnNames="id"
                                 referencedTableName="PARKINGSPACE"/>

    </changeSet>
</databaseChangeLog>
