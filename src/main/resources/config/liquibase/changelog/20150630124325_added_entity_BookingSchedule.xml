<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <!--
        Added the entity ReservedParking.
    -->
    <changeSet id="20150630124325" author="ali.khan">
   <!--  <preConditions onFail="MARK_RAN">
			<not>
				<tableExists schemaName="parkswift" tableName="PARKING_SPACE_RESERVED_ON"/>
			</not>
		</preConditions> -->
        <createTable tableName="PARKING_SPACE_RESERVED_ON">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="start_date" type="date">
                <constraints nullable="false" />
            </column>
            <column name="end_date" type="date">
                <constraints nullable="false" />
            </column>
            <column name="start_time" type="time">
                <constraints nullable="false" />
            </column>
            <column name="end_time" type="time">
                <constraints nullable="false" />
            </column>
            <column name="repeat_on" type="varchar(255)"/>
            <column name="repeat_occurrences" type="integer"/>
            <column name="status" type="varchar(255)"/>
            <column name="reserved_on" type="timestamp"/>
            <column name="parkingspace_id" type="bigint"/>
            <column name="created_at" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_at" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false" />
            </column>
        </createTable>
        <sql splitStatements="false" dbms="mysql">
		  CREATE TRIGGER update_PARKING_SPACE_RESERVED_ON_trg
		    BEFORE UPDATE ON PARKING_SPACE_RESERVED_ON
		      FOR EACH ROW BEGIN
		        SET NEW.last_modified_at = NOW();
		      END
		</sql>
        
        <dropDefaultValue tableName="PARKING_SPACE_RESERVED_ON" columnName="reserved_on" columnDataType="datetime"/>

        
        <addForeignKeyConstraint baseColumnNames="parkingspace_id"
                                 baseTableName="PARKING_SPACE_RESERVED_ON"
                                 constraintName="fk_reservedparking_parkingspace_id"
                                 referencedColumnNames="id"
                                 referencedTableName="PARKING_SPACE"/>

    </changeSet>
</databaseChangeLog>
