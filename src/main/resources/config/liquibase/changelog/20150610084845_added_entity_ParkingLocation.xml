<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <!--
        Added the entity ParkingLocation.
    -->
    <changeSet id="20150610084845" author="jhipster">
        <createTable tableName="PARKINGLOCATION">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="property_type" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="number_of_spaces" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="address_line1" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="address_line2" type="varchar(255)"/>
            <column name="city" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="state" type="varchar(255)"/>
            <column name="country" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="zip_code" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="longitude" type="decimal(10,2)">
                <constraints nullable="false" />
            </column>
            <column name="lattitude" type="decimal(10,2)">
                <constraints nullable="false" />
            </column>
            <column name="created_at" type="timestamp"/>
            <column name="modified_at" type="timestamp"/>
            <column name="parkinglocationcontactinfo_id" type="bigint"/>
            <column name="paypallaccount_id" type="bigint"/>
            <column name="user_id" type="bigint"/>
        </createTable>
        <dropDefaultValue tableName="PARKINGLOCATION" columnName="created_at" columnDataType="datetime"/>

        <dropDefaultValue tableName="PARKINGLOCATION" columnName="modified_at" columnDataType="datetime"/>

        
        <addForeignKeyConstraint baseColumnNames="parkinglocationcontactinfo_id"
                                 baseTableName="PARKINGLOCATION"
                                 constraintName="fk_parkinglocation_parkinglocationcontactinfo_id"
                                 referencedColumnNames="id"
                                 referencedTableName="PARKINGLOCATIONCONTACTINFO"/>

        <addForeignKeyConstraint baseColumnNames="paypallaccount_id"
                                 baseTableName="PARKINGLOCATION"
                                 constraintName="fk_parkinglocation_paypallaccount_id"
                                 referencedColumnNames="id"
                                 referencedTableName="PAYPALLACCOUNT"/>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="PARKINGLOCATION"
                                 constraintName="fk_parkinglocation_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="JHI_USER"/>

    </changeSet>
</databaseChangeLog>
